<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_osoblje_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/radius_list_third"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_fragment_osoblje_list_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile_photo" />

    <TextView
        android:id="@+id/tv_osoblje_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Dr Marko Markovic"
        android:textColor="@color/dashboard_color"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_fragment_osoblje_list_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_osoblje_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Email: petarpetrovic@vts.edu.rs"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_fragment_osoblje_list_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_osoblje_ime" />

    <ImageView
        android:id="@+id/iv_fragment_osobolje_calendar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_calendar" />

    <ImageView
        android:id="@+id/iv_fragment_osoblje_more_info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_fragment_osobolje_calendar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_info" />
</androidx.constraintlayout.widget.ConstraintLayout>